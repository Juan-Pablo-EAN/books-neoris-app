@model IEnumerable<BooksNeorisApp.DTOs.AutorDto>

@{
    ViewData["Title"] = "Gestión de Autores";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="bi bi-person-lines-fill"></i> Listado de Autores
                </h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nuevo Autor
                </a>
            </div>
            <hr />
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre Completo</th>
                                <th>Fecha de Nacimiento</th>
                                <th>Ciudad</th>
                                <th>Correo Electrónico</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var autor in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@autor.NombreCompleto</strong>
                                    </td>
                                    <td>
                                        @autor.FechaNacimiento.ToString("dd/MM/yyyy")
                                        <small class="text-muted">
                                            (@((DateTime.Now.Year - autor.FechaNacimiento.Year)) años)
                                        </small>
                                    </td>
                                    <td>@autor.CiudadProcedencia</td>
                                    <td>
                                        <a href="mailto:@autor.CorreoElectronico" class="text-decoration-none">
                                            @autor.CorreoElectronico
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Total de autores registrados: <strong>@Model.Count()</strong>
                    </p>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No hay autores registrados</h4>
                    <p class="text-muted">Comienza agregando un nuevo autor</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Crear Primer Autor
                    </a>
                </div>
            }
        </div>
    </div>
</div>